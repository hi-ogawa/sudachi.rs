{
  "name": "@hiogawa/sudachi.napi",
  "private": true,
  "module": "commonjs",
  "main": "./index.js",
  "types": "./index.d.ts",
  "scripts": {
    "// cf. https://github.com/napi-rs/napi-rs/issues/1249": "",
    "clean": "rm -rf index.*.node && touch src/lib.rs",
    "dev": "run-s napi:dev",
    "build": "run-s napi:docker strip",
    "napi": "napi build --platform --release",
    "napi:dev": "napi build --platform",
    "napi:docker": "docker-compose build napi-rs && docker-compose run -T --rm napi-rs cat index.linux-x64-gnu.node > index.linux-x64-gnu.node",
    "strip": "strip *.node"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.11.4",
    "npm-run-all": "^4.1.5"
  }
}
